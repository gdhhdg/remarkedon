<% include head.ejs %>
<div class="row">
    <a href="/auth/facebook"><button>Facebook</button></a>
    <a href="/auth/twitter"><button>Twitter</button></a>
    <a href="/auth/google"><button>Google</button></a>
    <% if (message.length > 0) {%>
    <div class="alert alert-danger"><%= message %></div>
    <% } %>
    <form class="col s12" action="/login" method="post">
        <div class="row">
            <div class="input-field col s12">
                <input  id="email" type="text" class="" name="email">
                <label for="email">User Name/Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="password" type="password" class="validate" name="password">
                <label for="password">Password</label>
            </div>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="button">Submit
            <i class="material-icons right"></i>
        </button>
    </form>
</div>
</html>